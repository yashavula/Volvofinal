<?xml version = "1.0" encoding = "UTF-8"?>

<faces-config
   xmlns = "http://java.sun.com/xml/ns/javaee"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee
   http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
   version = "2.0">
   
   <navigation-rule>
      <from-view-id>views/menu.xhtml</from-view-id>
       <navigation-case>
         <from-action>#{menuBean.processPage1}</from-action>
         <from-outcome>page</from-outcome>
         <to-view-id>views/create.xhtml</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-action>#{menuBean.processPage2}</from-action>
         <from-outcome>page</from-outcome>
         <to-view-id>views/update.xhtml</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-action>#{menuBean.processPage3}</from-action>
         <from-outcome>page</from-outcome>
         <to-view-id>views/view.xhtml</to-view-id>
      </navigation-case>
       <navigation-case>
         <from-action>#{menuBean.processPage4}</from-action>
         <from-outcome>page</from-outcome>
         <to-view-id>views/delete.xhtml</to-view-id>
      </navigation-case>
   </navigation-rule>

</faces-config>